		<View id="assignments"></View>
		<Label id="assignmnets_string" color="black" text="assignments"></Label>
				
		<View id="announcements"></View>
		<Label id="announcements_string" color="black" text="announcements"></Label>
		
		<View id="lecture"></View>
		<Label id="lecture_string" color="black" text="lecture" ></Label>
		 
		<View id="grades"></View>
		<Label id="grades_string" color="black" text="grades" ></Label>
		
		
		<!-- Example to show the Pop Up to Check In -->
