<Alloy>
	<Window id="login">
		<View id = 'contain' layout='vertical'>
		<View id="ucon">
		<Label id="label1" color="white" shadowColor="#aaa" text="Username" textAlign="Ti.UI.TEXT_ALIGNMENT_LEFT"
             />
		<TextField id="username"></TextField>
		</View>
		<View id="pcon">
		<Label id="label2" color="white" shadowColor="#aaa" text="Password" textAlign="Ti.UI.TEXT_ALIGNMENT_LEFT"
             />
		<TextField id="password"></TextField>
		</View>
		
		
		<Switch id="remember" value="true" />
		<Button id="btnLogin" title="Login" onClick="checkLogin"/>
		<Label id="label3" color="white" shadowColor="#aaa" text="Forgot Password?" textAlign="Ti.UI.TEXT_ALIGNMENT_CENTER"
             />
             <Label id="label4" color="white" shadowColor="#aaa" text="Create Account" textAlign="Ti.UI.TEXT_ALIGNMENT_CENTER"
             />
	</View>
	</Window>
	</Alloy>
	
